{
  "name": "project-manager",
  "version": "0.1.0",
  "private": true,
  "description": "a management tool for sharohil",
  "author": "sharohil <hnazarnejad76@gmail.com>",
  "homepage": "https://ahmedalhasan.com",
  "main": "electron/app.js",
  "scripts": {
    "next:dev": "next dev --turbopack",
    "next:build": "next build",
    "dev": "yarn electron:pack && ELECTRON_ENV=development electron .",
    "build": "yarn electron:pack && yarn next:build && yarn electron:build",
    "electron:build": "electron-builder build --linux --x64",
    "electron:pack": "webpack --config webpack.js"
  },
  "build": {
    "appId": "ir.hippogriff.project-manager",
    "productName": "Hippo-Project",
    "directories": {
      "output": "dist"
    },
    "icon": "public/logo.png",
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "public/logo.png"
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "public/**/*",
      "package.json",
      "src/**/*"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^4.1.3",
    "@mui/material": "^7.0.1",
    "@mui/material-nextjs": "^7.0.0",
    "axios": "^1.8.4",
    "express": "^4.21.2",
    "framer-motion": "^12.6.2",
    "motion": "^12.6.2",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "sonner": "^2.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}